<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Gallery | Timon Rowntree</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- AOS for scroll animations -->
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

  <!-- Google Font (same as index) -->
  <link href="https://fonts.googleapis.com/css2?family=Sofia+Sans:wght@100;200;300;400;500;600;700;800&display=swap" rel="stylesheet">

  <style>
    body {
      font-family: 'Sofia Sans', sans-serif;
    }
    .nav-link:hover {
      color: white !important;
    }
  </style>
</head>

<body class="bg-gray-50 text-gray-900">

  <!-- Header + Navigation -->
  <header class="w-full bg-gray-50 shadow-sm">
    <div class="container mx-auto flex flex-col sm:flex-row items-center justify-between py-6 px-6">
      
      <!-- Logo -->
      <div class="flex items-center">
        <img src="images/Africa_images/TR%20Symbol_Lime_blue.png" alt="Timon Rowntree Logo" class="h-20 w-auto mr-4">
        <span class="text-xl font-semibold text-gray-900 hidden sm:block">Timon Rowntree</span>
      </div>

      <!-- Navigation -->
      <nav class="mt-4 sm:mt-0">
        <ul class="flex flex-col sm:flex-row gap-4 sm:gap-6 text-gray-400 font-medium">
          <li><a href="#home" class="nav-link transition-colors duration-200 hover:text-white">Home</a></li>
          <li><a href="#about" class="nav-link transition-colors duration-200 hover:text-white">About</a></li>
          <li><a href="#vision" class="nav-link transition-colors duration-200 hover:text-white">Vision</a></li>
          <li><a href="#expertise" class="nav-link transition-colors duration-200 hover:text-white">Expertise</a></li>
          <li><a href="#gallery" class="nav-link transition-colors duration-200 hover:text-white">Gallery</a></li>
          <li><a href="#contact" class="nav-link transition-colors duration-200 hover:text-white">Contact</a></li>
        </ul>
      </nav>

    </div>
  </header>

  <!-- Page Header -->
  <section class="py-12 text-center">
    <h1 class="text-4xl font-semibold mb-2" style="color: rgb(81, 230, 0);" data-aos="fade-up">
      Photo Gallery
    </h1>
    <p class="text-gray-600 text-lg" data-aos="fade-up" data-aos-delay="100">
      Selected moments from projects and field work
    </p>
  </section>

  <!-- Gallery Grid -->
  <main class="container mx-auto px-6 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <img src="images/Africa_images/DSCF0678.JPG" alt="Project Image 1" class="w-full h-64 object-cover rounded-lg shadow-lg" data-aos="fade-up" data-aos-delay="200">
      <img src="images/Africa_images/DSCF1477.JPG" alt="Project Image 2" class="w-full h-64 object-cover rounded-lg shadow-lg" data-aos="fade-up" data-aos-delay="300">
      <img src="images/Africa_images/DSCF0765.JPG" alt="Project Image 3" class="w-full h-64 object-cover rounded-lg shadow-lg" data-aos="fade-up" data-aos-delay="400">
    </div>

    <!-- Back button -->
    <div class="text-center mt-12" data-aos="fade-up" data-aos-delay="500">
      <a href="/" 
         class="inline-block px-6 py-3 rounded-lg text-white font-semibold transition-colors duration-200 hover:bg-blue-500"
         style="background-color: rgb(44, 236, 255);">
        ‚Üê Back to Home
      </a>
    </div>
  </main>

  <!-- AOS Init -->
  <script>
    AOS.init({
      once: true
    });
  </script>

</body>
</html>
