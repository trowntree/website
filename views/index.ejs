    // Show button when footer enters viewport
    if (footerTop < windowHeight) {
      backToTop.classList.remove('opacity-0');  // fade in
      backToTop.classList.add('opacity-100');
    } else {
      backToTop.classList.remove('opacity-100');
      backToTop.classList.add('opacity-0');     // fade out
    }
  });

