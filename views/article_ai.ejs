    .article-content h2, .article-content h3 { margin-top: 2rem; color: rgb(44,236,255); }

    /* Back button */
    #backToTop { display: inline-block; padding: 0.75rem 1.5rem; border-radius: 0.5rem; font-weight: 600; background-color: rgb(81, 230, 0); color: #000; text-decoration: none; transition: background 0.2s; }
    #backToTop:hover { background-color: rgb(44,236,255); color: #000; }
  </style>
</head>
